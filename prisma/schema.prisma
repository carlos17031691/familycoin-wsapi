datasource db {
  url      = env("DATABASE_URL")
  provider = "mysql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
    id            Int       @id @default(autoincrement())
    createdAt     DateTime  @default(now())
    name          String
    email         String    @unique
    password      String
    wallet        Wallet?
    sentTransactions Transaction[] @relation("sent")
    receivedTransactions Transaction[]  @relation("recived") 
}

model Wallet {
    id          Int       @id @default(autoincrement())
    user        User      @relation(fields: [userId], references: [id])
    userId      Int       @unique
    address     String    @unique
    privateKey  String    @unique
    balance     Decimal   @default(0.00000000)
}

model Transaction {
    id          Int       @id @default(autoincrement())
    from        User      @relation("sent",fields: [fromId], references: [id])
    fromId      Int
    to          User      @relation("recived",fields: [toId], references: [id])
    toId        Int
    amount      Decimal   @default(0)
    status      Int //0 pendiente, 1 completada
    hash        String
    description String    @default("")
    createdAt   DateTime  @default(now())
}